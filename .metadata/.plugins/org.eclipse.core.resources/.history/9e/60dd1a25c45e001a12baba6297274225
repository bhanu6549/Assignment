package com.mindtree.utility;

import java.sql.DriverManager;

import com.mysql.jdbc.Connection;

public class JdbcConnection {
	private static final String url = "jdbc:mysql://localhost:3306/watch";
	private static final String uname = "root";
	private static final String pass = "Welcome123";

	public static Connection getConnection() throws UtilityException{
		Connection connection = null;
		try {
			Class.forName("com.mysql.jdbc.Driver");
			connection = DriverManager.getConnection(url, uname, pass);
			System.out.println("success");

		} catch (Exception e) {
			System.out.println(e);
			throw new UtilityException(e.getMessage(),e);
		}
		return connection;
	}

	public static String closeConnection(Connection connection) throws UtilityException{
		String result = "";
		try {
			connection.close();

		} catch (Exception e) {
			throw new UtilityException(e.getMessage(),e);
		}
		return result;
	}


}
